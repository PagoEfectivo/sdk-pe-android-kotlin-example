<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pe.elcomercio.pagoefectivosdkkotlinsample">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".PagoEfectivoApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".GenerateCipActivity"
            android:label="@string/title_activity_generate_cip"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashAppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ListCipsActivity"
            android:label="@string/title_activity_list_cips"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".payment_method.PaymentMethodActivity"
            android:label="@string/title_activity_payment_method"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>